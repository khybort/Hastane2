@model HastaneYonetim.Core.ViewModel.DoktorFormuViewModel
@{
    ViewBag.Title = "Doktor düzenle";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h3>Doktoru düzenle </h3>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="form-horizontal form-label-left">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(m => m.Id)

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Ad</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Ad, new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.Ad)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Uzmanlık</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.Uzmanlik, new SelectList(Model.Uzmanliklar, "Id", "Ad"), "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Uzmanlik)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Telefon</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Telefon, new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.Telefon)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Adres</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Adres, new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.Adres)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Durum</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="radio">
                                <label> @Html.RadioButtonFor(model =>model.MusaitMi ,"true", new { @class = "flat" }) Mevcut </label>
                                <label> @Html.RadioButtonFor(model=>model.MusaitMi, "false", new { @class = "flat" }) Kapalı </label>
                             </div>
                        </div>
                    </div>


                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                                    <a href="@Url.Action("Detaylar","Doktorlar", new{id =Model.Id})"class="btn btn-default">Geri</a>
                                    <button type="submit" class="btn btn-success">Kaydet</button>
                                </div>
                            </div>

                }
                </div> 
            </div>
        </div>
    </div>
</div>



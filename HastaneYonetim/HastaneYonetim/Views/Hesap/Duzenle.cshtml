@model HastaneYonetim.Core.ViewModel.KullaniciViewModel
@{
    ViewBag.Title = "Duzenle";
}
<!--Bu sayfa hata veriyor izni olmayan kullanıcının giremeyeceğini söylüyor düzenleme direk bu sayfanın açılamayacağından dolayı
    olduğunu düşünüyorum-->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h3>Kullanıcıyı düzenle</h3>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="form-horizontal form-label-left">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                 


                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Email</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Eposta, new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.Eposta)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Durum</label> // status
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @*<div  class="btn-group" data-toggle="buttons">*@
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(model => model.aktifMi, "true", new { @class = "flat" }) Active
                                </label>
                                <label>
                                    @Html.RadioButtonFor(model => model.aktifMi, "false", new { @class = " flat" }) Locked
                                </label>
                            </div>
                        </div>
                    </div>


                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                                        <button type="submit" class="btn btn-success">Kaydet</button>
                                    </div>
                                </div>
                }
                    </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</div>






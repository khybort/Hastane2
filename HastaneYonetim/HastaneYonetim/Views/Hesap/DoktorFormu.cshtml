@model HastaneYonetim.Core.ViewModel.DoktorFormuViewModel
<!-- bu sayfa hata veriyor adı değiştirilmiş olduğu için bulunamıyor diyor formun ismini hesapcontroller 186. satırda ki return view a göre verdim-->
@{
    ViewBag.Title = "Doktor formu";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h3>Doktor Ekle </h3>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                @using (Html.BeginForm("DoktorKayit", "Hesap",FormMethod.Post, new { @class = "form-horizontal form-label-left", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">İsim</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Ad)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Telefon</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Telefon, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Telefon)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Uzmanlık</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.Uzmanlik, new SelectList(Model.Uzmanliklar, "Id", "Ad"), "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Uzmanlik)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-xs-12">Adres</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.Adres, new { @class = "form-control " })
                            @Html.ValidationMessageFor(m => m.Adres)
                        </div>
                    </div>

                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Eposta</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(m => m.KayitViewModel.Eposta, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.KayitViewModel.Eposta)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Şifre</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.PasswordFor(m => m.KayitViewModel.Sifre, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.KayitViewModel.Sifre)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 col-xs-12">Şifreyi Doğrula</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.PasswordFor(m => m.KayitViewModel.SifreOnay, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.KayitViewModel.SifreOnay)
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                                    <button type="submit" class="btn btn-success">Kaydet</button>
                                </div>
                            </div>

                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
@model HastaneYonetim.Core.ViewModel.SifreUnuttumViewModel
@{
    ViewBag.Title = "Şifrenizi mi unuttunuz?";
}

<h2>Şifrenizi mi unuttunuz?</h2>

@using (Html.BeginForm("SifreUnuttum", "Hesap", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Epostanızı Giriniz.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Eposta, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Eposta, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Eposta linki" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

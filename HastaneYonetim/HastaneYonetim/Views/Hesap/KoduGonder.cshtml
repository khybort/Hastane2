@model HastaneYonetim.Core.ViewModel.KoduGonderViewModel
@{
    ViewBag.Title = "Gönder";
}

<h2>Gönder.</h2>

@using (Html.BeginForm("KoduGonder", "Hesap", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("hatirlaBeni", @Model.HatirlaBeni)
    <h4>Doğrulama kodu gönder</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            Select Two-Factor Authentication Provider:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model HastaneYonetim.Core.ViewModel.HastaDetayViewModel





<div class="container bg-light">
    <div class="py-5 text-center">
    </div>
    @*<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>*@

    <div class="row modal-body">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Hasta</span>

            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between">
                    <span>Jeton:</span>
                    <strong>@Model.Hasta.HastaNumarasi</strong>
                </li>

                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0"> İsim</h6>
                        <small class="text-muted">@Model.Hasta.Ad</small>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Telefon</h6>
                        <small class="text-muted">@Model.Hasta.Telefon</small>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Tarih Eklendi</h6>
                        <small class="text-muted">@Model.Hasta.TarihSure.ToString("MMM"), @Model.Hasta.TarihSure.ToString("d ")- @Model.Hasta.TarihSure.ToString("yyyy")-@Model.Hasta.TarihSure.ToString("HH:mm")</small>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                        <h6 class="my-0">Adres</h6>
                        <small>@Model.Hasta.Adres</small>
                    </div>
                </li>
            </ul>

        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Bakımlar</h4>
            <div class="row">
                <table  class="table table-bordered table-hover dataTables">
                    <thead>
                        <tr>
                            <th class="col-md-4 mb-2">Klinik Bulgular</th>
                            <th class="col-md-4 mb-2">Teşhis</th>
                            <th class="col-md-4 mb-2">İkinci Teşhis</th>
                            <th class="col-md-4 mb-2">Üçüncü Teşhis</th>
                            <th class="col-md-4 mb-2">Terapi</th>
                            <th class="col-md-4 mb-2">Tarih</th>
                            <th class="col-md-4 mb-2">Doktor</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var item in Model.Bakimlar)
                        {
                            <tr>
                                <td>@item.KlinikBulgular</td>
                                <td>@item.Teshis</td>
                                <td>@item.Teshis2</td>
                                <td>@item.Teshis3</td>
                                <td>@item.Terapi</td>
                                <td>@item.Tarih.ToString("d")</td>


                            </tr>


                        }
                    </tbody>

                </table>

            </div>

        </div>

    </div>
    <div class="modal-footer">
        <div class="row ">
            <div class="col-xs-12">
                <a href="@Url.Action("Duzenle", "Hastalar", new { id= Model.Hasta.Id})" class="btn btn-primary"><i class="fa fa-edit fa-fw"></i>Hastayı Düzenle</a>

                <a href="@Url.Action("Olustur", "Bakimlar", new { id =Model.Hasta.Id})" class="btn btn-primary"><i class="fa fa-edit fa-fw"></i>Reçete Ekle</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>

            </div>
        </div>
    </div>

</div>

<script>

         $('.dataTables').DataTable({
             "scrollY": "300px",
             "scrollCollapse": true,
             "paging": false,
             "filter": false,
             "info": false
         });


</script>

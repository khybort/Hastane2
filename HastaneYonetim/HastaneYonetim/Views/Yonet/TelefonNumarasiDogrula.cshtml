@model HastaneYonetim.Core.ViewModel.TelefonNumarasiDogrulaViewModel
@{
    ViewBag.Title = "telefon numarasını doğrula";
}

<h2>Telefon Numarasını Doğrula.</h2>

@using (Html.BeginForm("TelefonNumarasiDogrula", "Yonet", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("telefonNumarasi", @Model.TelefonNumarasi)
    <h4>Doğrulama Kodunu Girin</h4>
    <h5>@ViewBag.Durum</h5>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Kod, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Kod, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Gonder" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
